{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JournalEntry",
  "type": "object",
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "UTC time when the entry was created"
    },
    "text": {
      "type": "string",
      "description": "The entry text"
    }
  },
  "required": ["timestamp", "text"]
}
